# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ALLOWED_TELEGRAM_IDS=123456789,987654321

# Monitoring Configuration
MONITORING_INTERVAL=60000
RAM_THRESHOLD=90

# Log Tracking Configuration
# Comma-separated list of log file paths to monitor
LOG_PATHS=/var/log/app/error.log,/var/log/nginx/error.log

# Uptime Checker Configuration
# Comma-separated list of URLs to monitor
UPTIME_URLS=https://example.com,https://api.example.com/health

# Database Backup Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=your_database

# Optional: Custom paths for database tools
# PG_DUMP_PATH=/usr/bin/pg_dump
# MYSQLDUMP_PATH=/usr/bin/mysqldump
# MONGODUMP_PATH=/usr/bin/mongodump

# Server Configuration
PORT=3000
NODE_ENV=production